
@section scripts {
    <script src="@Url.Content("~/Content/Scripts/lib/jquery.unobtrusive-ajax.js")" type="text/javascript">         </script>z
    <script src="~/Content/Scripts/app/poHelper.js"></script>
    <script>
        function GoToHome() {
            window.location = "/Home/Index";
        }
    </script>
}

<div id="Wrapper">
    <div id="messageBar" class="clearfix">
        <div id="commonMessage"></div>
        <div class="message">@ViewBag.Message</div>
    </div>
    <br />
    @using (Ajax.BeginForm("Create", "Order", null, new AjaxOptions { UpdateTargetId = "messageRefresh", OnComplete = "GoToHome()", HttpMethod = "Post"}))
    {
        <div>
            <table>
                <tr>
                    <td>PONbr</td>
                    <td>
                        <input type="text" value="" id="js-PONbr" name="PONbr" class="resetThis" required="required" autofocus="autofocus" tabindex="1" />
                    </td>
                </tr>
                
                <tr>
                    <td>Customer Nbr</td>
                    <td>
                        <input type="text" value="" id="js-customerName" name="customernbr" class="resetThis" required="required" autofocus="autofocus" tabindex="2" />
                    </td>
                </tr>
                <tr>
                    <td>Customer Name</td>
                    <td>
                        <input type="text" value="" id="js-customerName" name="customername" class="resetThis" required="required" autofocus="autofocus" tabindex="2" />
                    </td>
                </tr>
                <tr>
                    <td>Customer Email</td>
                    <td>
                        <input type="text" value="" id="js-customerEmail" name="customeremail" class="resetThis" required="required" autofocus="autofocus" tabindex="3" />
                    </td>
                </tr>
           
                <tr>
                    <td>DeliveryDate</td>
                    <td>
                        <input type="text" value="" id="js-DeliveryDate" name="DeliveryDate" class="resetThis" required="required" autofocus="autofocus" tabindex="4" />
                    </td>
                </tr>
            </table>
            <div class="container">
                <table id="myTable" class=" table order-list">
                    <thead>
                        <tr>
                            <td>Product</td>
                            <td>Qty</td>
                            <td>Description</td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="col-sm-4">
                                <input type="text" name="item" class="form-control" />
                            </td>
                            <td class="col-sm-4">
                                <input type="mail" name="qty" class="form-control" />
                            </td>
                            <td class="col-sm-3">
                                <input type="text" name="desc" class="form-control" />
                            </td>
                            <td class="col-sm-2">
                                <a class="deleteRow"></a>

                            </td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="5" style="text-align: left;">
                                <input type="button" class="btn btn-lg btn-block " id="addrow" value="Add Row" />
                            </td>
                        </tr>
                        <tr></tr>
                    </tfoot>
                </table>
            </div>
            <div>
                <table>
                    <tr>
                        <td>
                            <input type="submit" value="Save" class="js-save" /> <input type="reset" value="Reset" />
                        </td>
                    </tr>
                </table>
            </div>
        </div>

    }
</div>